<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <requestFocus/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.a725862.churrascore.TrucoActivity"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/futebol"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/primaryColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <EditText
                android:id="@+id/nameTime1Fut"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="35dp"
                android:inputType="text"
                android:hint="TIME 1"/>

            <EditText
                android:id="@+id/nameTime2Fut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="35dp"
                android:inputType="text"
                android:hint="TIME 2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center">
            <TextView
                android:id="@+id/ptsFutTime1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="50dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@color/secondaryLightColor"
                android:textColor="@color/primaryTextColor"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight=".4"
                android:text="x"
                android:textSize="40dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"/>
            <TextView
                android:id="@+id/ptsFutTime2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="50dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="20dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/vitoriasTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vitorias"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/vitoriasTime1Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="textStart"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/vitoriasTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vitorias"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/vitoriasTime2Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="textStart"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adicionar_gols"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="20dp"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingHorizontal="20dp">
            <Button
                android:id="@+id/btnFutPlus1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textSize="30dp"
                android:background="@color/secondaryColor"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/btnFutMinus1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="30dp"
                android:background="@color/secondaryColor"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/determinar_tempo"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="20dp"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1">
            <ImageButton
                android:id="@+id/playCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow"
                android:background="@null"
                android:layout_weight="0"/>


            <SeekBar
                android:id="@+id/countProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumbTint="@color/primaryColor"
                android:progressTint="@color/secondaryColor"
                android:progress="50"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/pauseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pause"
                android:background="@null"
                android:layout_weight="0"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
