<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <requestFocus/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.a725862.churrascore.TrucoActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRUCO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="@color/primaryColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginVertical="10dp">

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="35dp"
                android:inputType="text"
                android:hint="TIME 1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="35dp"
                android:inputType="text"
                android:hint="TIME 2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center">
            <TextView
                android:id="@+id/ptsTime1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="50dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@color/secondaryLightColor"
                android:textColor="@color/primaryTextColor"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight=".4"
                android:text="x"
                android:textSize="40dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"/>
            <TextView
                android:id="@+id/ptsTime2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="50dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="10dp">
            <TextView
                android:id="@+id/wins1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="VITORIAS: 0"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/wins2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="VITORIAS: 0"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADICIONAR PONTOS:"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="20dp"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingHorizontal="20dp">
            <Button
                android:id="@+id/btnPlus1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textSize="30dp"
                android:background="@color/secondaryColor"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/btnMinus1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="30dp"
                android:background="@color/secondaryColor"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="20dp">
            <Button
                android:id="@+id/btnPlus3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+3"
                android:textSize="25dp"
                android:background="@color/secondaryColor"
                android:layout_marginHorizontal="5dp"/>
            <Button
                android:id="@+id/btnPlus6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+6"
                android:textSize="25dp"
                android:background="@color/secondaryColor"
                android:layout_marginHorizontal="5dp"/>
            <Button
                android:id="@+id/btnPlus9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+9"
                android:textSize="25dp"
                android:background="@color/secondaryColor"
                android:layout_marginHorizontal="5dp"/>
            <Button
                android:id="@+id/btnPlus12"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+12"
                android:textSize="25dp"
                android:background="@color/secondaryColor"
                android:layout_marginHorizontal="5dp"/>>
        </LinearLayout>

    </LinearLayout>
</ScrollView>